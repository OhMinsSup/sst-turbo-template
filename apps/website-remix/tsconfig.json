{
  "extends": "@template/tsconfig/remix.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "**/.d.ts"
  ],
  "compilerOptions": {
    "types": ["@remix-run/node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    // Vite takes care of building everything, not tsc.
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
